{
    "dart.mcpServer": true,
    "explorer.fileNesting.enabled": true,
    // "explorer.fileNesting.expand": false,
    "explorer.fileNesting.patterns": {
        "*.repository.dart": "${capture}.repository.impl.dart",
        "*.datasource.dart": "${capture}.datasource.impl.dart",
        "*.bloc.dart": "${capture}.event.dart,${capture}.state.dart,${capture}.guard.dart,${capture}.bloc_manager.dart",
        "*.cubit.dart": "${capture}.state.dart,${capture}.guard.dart,${capture}.cubit_manager.dart",
        "pubspec.yaml": ".gitignore,pubspec.lock,pubspec_overrides.yaml,.packages,.flutter-plugins,.flutter-plugins-dependencies,.metadata,devtools_options.yaml,analysis_options.yaml,.tool-versions,.json,flutter_launcher_i*.yaml,Dockerfile.*,*.md,build.yaml",
    },
    // видимоcть файлов
    "files.exclude": {
        "**/.dart_tool": true,
        "**/.qodo": false,
        "**/.trae": true,
        "**/*.g.*": true,
        "**/*.chopper.*": true,
        "**/*.freezed.*": true,
        "**/ios": true,
        "**/build": true,
        "**/android": true,
        "**/macos": true,
        "**/windows": true,
        "**/web": true,
        "**/linux": true,
        "**/test": true,
        "**/pubspec.lock": true,
        "**/analysis_options.yaml": true,
        // "**/combined/*": true,
    },
    "cSpell.dictionaries": [
        "dart"
    ],
    //install extension Russian - Code Spell Checker
    "cSpell.language": "en,ru",
    "cSpell.words": [
        "checkpw",
        "daos",
        "gensalt",
        "googlesignin",
        "hashpw",
        "stagging"
    ],
    "cSpell.ignorePaths": [
        "vscode-extension", //
        ".git",
        "g.dart"
    ],
    "dart.lineLength": 80
}